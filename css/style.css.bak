@import url('https://fonts.googleapis.com/css?family=Muli&display=swap');
@import url('https://fonts.googleapis.com/css?family=Quicksand&display=swap');


:root {
  --a: 5px;
  --b: 5px;



body {
  background-image: url('../background_img.jpg');
  font-family: 'Muli', sans-serif;
  background-size: cover;
  background-repeat: no-repeat;
  height: 100vh;
}

#main {
  align-items: center !important;
  justify-content: center;
  display: flex;
  height: 100vh;
}

form {
  width: 300px;
  height: 300px;
  background-color: rgba(235, 184, 184, 0.3);
  box-shadow: 0 5px 20px rgb(116, 103, 103);
  padding: 10px 10px;
  border-radius: 5px;
  font-size: large;
}



/* using calc function to calculate 
line height with above defined variables */


.content {
  margin-top: 13%;
  line-height: calc(var(--a) * var(--b));
}

.content h1 {
  font-family: Georgia, "Times New Roman", serif;
}


form div {
  margin-top: 15px;
  margin-left: 2.3rem;
}

form #email {
  margin-top: 10px;
  height: 25px;
  border-radius: 10px;
  width: 80%;
}

form button {
  transition: 0.3s;
}

/* using transform to increase button size
 to make it look like animation on hover */

form button:hover {
  transition: 0.3s;
  transform: scale(1.3);
}

form button {
  background-color: rgb(18, 162, 107);
  border: 1px solid green;
  font-size: large;
  color: white;
  margin-left: 1.3rem;
  margin-top: 5px;
  width: 60%;
  height: 30px;
  border-radius: 10px;
}

@media only screen and (max-width: 700px) and (min-width: 350px) {
  form #email {
    margin-top: 10px;
    height: 25px;
    border-radius: 10px;
    width: 90%;
    margin-left: -30px;
  }

}

@media screen and (min-width: 700px) {
  form {
    width: 350px;
    height: 350px;
    background-color: rgba(95, 87, 87, 0.3);
    box-shadow: 0 5px 20px rgb(60, 54, 54);
    padding: 10px 10px;
    border-radius: 5px;
    font-size: large;
  }

  form button {
    background-color: rgb(18, 162, 18);
    border: 1px solid green;
    font-size: large;
    color: white;
    margin-left: 3rem;
    margin-top: 5px;
    width: 50%;
    height: 30px;
    border-radius: 10px;
  }

  form #email {
    margin-top: 10px;
    height: 25px;
    border-radius: 10px;
    width: 80%;
  }

  .content h1 {
    font-size: x-large !important;
    margin-left: -0.7rem;
  }
}